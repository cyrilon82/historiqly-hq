---
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-inner">
    <p class="footer-left">
      &copy; {year} HistorIQly. AI-curated content.
    </p>
    <nav class="footer-right">
      <a href="mailto:hello@historiqly.com">Contact</a>
      <span class="footer-divider">|</span>
      <a href="https://historiqly.com/about">About</a>
      <span class="footer-divider">|</span>
      <a href="https://historiqly.com/privacy">Privacy Policy</a>
    </nav>
  </div>

  <!-- Decorative compass star -->
  <div class="compass-star" aria-hidden="true">
    <svg viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M60 0L66 50L120 60L66 70L60 120L54 70L0 60L54 50Z" fill="currentColor" opacity="0.6"/>
      <path d="M60 20L63 54L100 60L63 66L60 100L57 66L20 60L57 54Z" fill="currentColor" opacity="0.3"/>
      <path d="M60 42L65 57L80 60L65 63L60 78L55 63L40 60L55 57Z" fill="currentColor" opacity="0.5"/>
    </svg>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    z-index: 1;
    margin-top: auto;
    border-top: 1px solid var(--border);
    padding: 0.75rem 1.5rem;
    background: rgba(14, 13, 12, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .footer-left {
    font-size: 0.75rem;
    color: var(--muted-foreground);
    opacity: 0.8;
    margin: 0;
  }

  .footer-right {
    display: flex;
    align-items: center;
  }

  .footer-right a {
    font-size: 0.75rem;
    color: var(--muted-foreground);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgba(160, 154, 146, 0.4);
    transition: color var(--transition-fast);
    opacity: 0.8;
  }

  .footer-right a:hover {
    color: var(--teal);
    opacity: 1;
  }

  .footer-divider {
    margin: 0 0.4rem;
    color: var(--muted-foreground);
    opacity: 0.3;
    font-size: 0.75rem;
  }

  .compass-star {
    position: absolute;
    bottom: -25px;
    right: -15px;
    width: 120px;
    height: 120px;
    color: rgba(20, 184, 166, 0.06);
    pointer-events: none;
    animation: star-rotate 60s linear infinite;
  }

  @keyframes star-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .compass-star svg {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .footer {
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
      background: rgba(14, 13, 12, 0.85);
      padding: 0.5rem 1rem;
    }

    .footer-inner {
      flex-direction: column;
      text-align: center;
      gap: 0.25rem;
    }
    .footer-left {
      font-size: 0.65rem;
    }
    .footer-right a, .footer-divider {
      font-size: 0.65rem;
    }
    .compass-star {
      width: 80px;
      height: 80px;
      bottom: -10px;
      right: -10px;
    }
  }
</style>
