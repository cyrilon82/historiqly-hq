---
const cases = [
  {
    file: "FILE-01",
    name: "Blog",
    stamp: "DECLASSIFIED",
    stampColor: "#D4A017",
    href: "https://blog.historiqly.com",
    description: "Deep dives into history's strangest stories. Cold cases, myths, and hidden truths â€” explored with evidence and AI.",
    cta: "Explore the Cases",
    rotation: "-1.5deg",
  },
  {
    file: "FILE-02",
    name: "Chat",
    stamp: "ACTIVE",
    stampColor: "#5DB585",
    href: "https://app.historiqly.com",
    description: "Chat with Einstein, Cleopatra, and 140+ historical figures. AI-powered conversations grounded in real evidence.",
    cta: "Chat with the Past",
    rotation: "0.5deg",
  },
  {
    file: "FILE-03",
    name: "Thrillers",
    stamp: "NEW EVIDENCE",
    stampColor: "#C44",
    href: "https://books.historiqly.com",
    description: "Lost civilizations. Secret societies. Unsolved crimes. History's greatest mysteries, written as thrillers you can't put down.",
    cta: "Read the Thrillers",
    rotation: "1deg",
  },
];
---

<section class="board board-grid" id="board">
  <div class="board-inner">
    <div class="board-label">The Board</div>

    <div class="board-grid-cards">
      {cases.map((c, i) => (
        <a
          href={c.href}
          class="case-card fade-in"
          target="_blank"
          rel="noopener"
          style={`--rotation: ${c.rotation}; --accent: ${c.stampColor}; transition-delay: ${i * 120}ms`}
        >
          <!-- Pin -->
          <div class="pin"></div>

          <!-- Card header -->
          <div class="case-header">
            <span class="case-file">{c.file}</span>
            <span class="case-stamp" style={`color: ${c.stampColor}; border-color: ${c.stampColor}`}>
              {c.stamp}
            </span>
          </div>

          <!-- Card body -->
          <h3 class="case-name">{c.name}</h3>
          <p class="case-desc">{c.description}</p>

          <!-- CTA -->
          <span class="case-cta">
            {c.cta}
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
      ))}
    </div>

    <!-- CTA section -->
    <div class="cta-section fade-in">
      <div class="cta-content">
        <h2>Talk to History</h2>
        <p>Chat with 140+ historical figures about mysteries, history, and conspiracies.</p>
        <a href="https://app.historiqly.com" class="cta-btn" target="_blank" rel="noopener">
          Start Chatting
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .board {
    padding: 1rem 1.5rem 5rem;
    position: relative;
  }

  .board-inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  .board-label {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted-foreground);
    text-align: center;
    margin-bottom: 3rem;
    opacity: 0.6;
  }

  .board-grid-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
    margin-bottom: 7rem;
    perspective: 1000px;
  }

  /* Case file card */
  .case-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 2.5rem 2rem 2rem;
    background: #1a1815;
    border: 1px solid var(--border);
    border-top: 3px solid var(--accent);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transform: rotate(var(--rotation)) translateY(0);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow: hidden;
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.3),
      0 10px 15px -3px rgba(0, 0, 0, 0.3);
  }

  /* Faint paper texture */
  .case-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.03' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.5;
    pointer-events: none;
  }

  .case-card:hover {
    transform: rotate(0deg) translateY(-12px) scale(1.02);
    box-shadow:
      0 20px 48px -12px rgba(0, 0, 0, 0.6),
      0 0 0 1px var(--accent);
    background: #1f1d1a;
    z-index: 10;
  }

  /* Pin */
  .pin {
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: radial-gradient(circle at 40% 35%, #e55 30%, #a33 100%);
    border-radius: 50%;
    box-shadow:
      0 2px 5px rgba(0, 0, 0, 0.7),
      inset 0 1px 2px rgba(255, 255, 255, 0.4);
    z-index: 2;
  }

  /* Pin shadow */
  .pin::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
    transform: translate(-4px, 4px) scale(0.8);
    filter: blur(2px);
    z-index: -1;
  }

  /* Case header */
  .case-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px dashed rgba(255,255,255,0.1);
  }

  .case-file {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted-foreground);
    opacity: 0.7;
  }

  .case-stamp {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.6rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    padding: 0.2rem 0.6rem;
    border: 2px solid;
    border-radius: 3px;
    transform: rotate(-5deg);
    opacity: 0.9;
    mix-blend-mode: screen;
  }

  .case-name {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--foreground);
    margin-bottom: 1rem;
    transition: color var(--transition-fast);
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .case-card:hover .case-name {
    color: var(--accent);
  }

  .case-desc {
    font-size: 0.95rem;
    color: var(--muted-foreground);
    line-height: 1.7;
    flex-grow: 1;
    margin-bottom: 2rem;
  }

  .case-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted-foreground);
    transition: all var(--transition-fast);
  }

  .case-card:hover .case-cta {
    color: var(--accent);
    gap: 0.8rem;
  }

  /* CTA section */
  .cta-section {
    position: relative;
    text-align: center;
    padding: 5rem 2rem;
    border-top: 1px solid var(--border);
    background: radial-gradient(circle at center, rgba(30, 30, 30, 0.4) 0%, transparent 70%);
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--foreground);
    letter-spacing: -0.02em;
  }

  .cta-section p {
    font-size: 1.15rem;
    color: var(--muted-foreground);
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 1rem 2.5rem;
    background: var(--primary);
    color: var(--background);
    font-weight: 700;
    font-size: 1.05rem;
    border-radius: 9999px;
    text-decoration: none;
    transition: all var(--transition-fast);
    box-shadow: 0 4px 20px rgba(93, 181, 133, 0.25);
  }

  .cta-btn:hover {
    background: var(--primary-hover);
    color: var(--background);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(93, 181, 133, 0.35);
  }

  @media (max-width: 768px) {
    .board-grid-cards {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .case-card {
      transform: rotate(0deg);
      padding: 2rem 1.5rem;
    }

    .case-card:hover {
      transform: translateY(-5px);
    }

    .cta-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
