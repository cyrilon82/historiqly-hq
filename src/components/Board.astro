---
const cases = [
  {
    file: "FILE-01",
    name: "Blog",
    label: "INSIGHTS",
    borderColor: "#D4A017",
    href: "https://blog.historiqly.com",
    image: "/Blog.webp",
    subtitle: "DEEP-DIVING MYSTERIES",
    description: "Deep-dives into history's strangest stories. Cold cases, myths, and hidden truths — explored with evidence and AI.",
    cta: "Explore the Blogs",
  },
  {
    file: "FILE-02",
    name: "Chat",
    label: "DIALOG",
    borderColor: "#14b8a6",
    href: "https://app.historiqly.com",
    image: "/Chat.webp",
    subtitle: "CONVERSE WITH THE PAST",
    description: "Chat with Einstein, Cleopatra, and 140+ historical figures. AI-powered conversations grounded in real evidence.",
    cta: "Chat with the Past",
  },
  {
    file: "FILE-03",
    name: "Chronicles",
    label: "NARRATIVES",
    borderColor: "#d97706",
    href: "https://chronicles.historiqly.com",
    image: "/Chronicles.webp",
    subtitle: "IMMERSIVE HISTORICAL STORIES",
    description: "History in their own words. First-person narratives of the world's most fascinating figures — then continue the conversation.",
    cta: "Read the Chronicles",
  },
  {
    file: "FILE-04",
    name: "Thrillers",
    label: "CLASSIFIED",
    borderColor: "#C44",
    href: "https://books.historiqly.com",
    image: "/Thrillers.webp",
    subtitle: "UNSOLVED ENIGMA FILES",
    description: "Lost civilizations. Secret societies. Unsolved crimes. History's greatest mysteries, written as thrillers you can't put down.",
    cta: "Read the Thrillers",
  },
];
---

<section class="board" id="board">
  <div class="board-inner">
    <!-- Connecting teal lines -->
    <svg class="connecting-lines" viewBox="0 0 1200 500" preserveAspectRatio="none" aria-hidden="true">
      <defs>
        <filter id="glow"><feGaussianBlur stdDeviation="2.5" result="b"/><feMerge><feMergeNode in="b"/><feMergeNode in="SourceGraphic"/></feMerge></filter>
      </defs>
      <path d="M180 250 Q400 120 600 230" stroke="rgba(20,184,166,0.1)" stroke-width="1" fill="none" filter="url(#glow)"/>
      <path d="M600 230 Q800 140 1020 250" stroke="rgba(20,184,166,0.1)" stroke-width="1" fill="none" filter="url(#glow)"/>
      <path d="M140 200 Q600 30 1060 200" stroke="rgba(20,184,166,0.05)" stroke-width="0.8" fill="none" filter="url(#glow)"/>
      <circle cx="180" cy="250" r="2.5" fill="rgba(20,184,166,0.2)" filter="url(#glow)"/>
      <circle cx="440" cy="180" r="1.5" fill="rgba(20,184,166,0.15)" filter="url(#glow)"/>
      <circle cx="600" cy="230" r="2.5" fill="rgba(20,184,166,0.2)" filter="url(#glow)"/>
      <circle cx="760" cy="185" r="1.5" fill="rgba(20,184,166,0.15)" filter="url(#glow)"/>
      <circle cx="1020" cy="250" r="2.5" fill="rgba(20,184,166,0.2)" filter="url(#glow)"/>
    </svg>

    <div class="board-cards">
      {cases.map((c, i) => (
        <a
          href={c.href}
          class="case-card fade-in"
          target="_blank"
          rel="noopener"
          style={`--bdr: ${c.borderColor}; transition-delay: ${i * 100}ms`}
          data-card={i}
        >
          <div class="case-image">
            <img src={c.image} alt={c.name} loading="lazy" />
            <div class="case-image-overlay"></div>
            <div class="case-header">
              <span class="case-file">{c.file}</span>
              <span class="case-label">{c.label}</span>
            </div>
            <h3 class="case-name">{c.name}</h3>
          </div>

          <div class="case-body">
            <span class="case-subtitle">{c.subtitle}</span>
            <p class="case-desc">{c.description}</p>
            <span class="case-cta">
              {c.cta}
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .board {
    padding: 0 2rem 2rem;
    margin-top: 1rem;
    position: relative;
    flex: 1;
    display: flex;
    align-items: flex-start;
  }

  .board-inner {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    width: 100%;
  }

  .connecting-lines {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .board-cards {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    z-index: 1;
  }

  /* Card */
  .case-card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 24%;
    margin: 0 -2px;
    border-radius: 14px;
    text-decoration: none;
    color: inherit;
    transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
    overflow: hidden;
    border: 1px solid var(--bdr);
    background: linear-gradient(180deg, rgba(28, 26, 22, 0.85) 0%, rgba(18, 16, 12, 0.95) 100%);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow:
      0 8px 24px -4px rgba(0, 0, 0, 0.6),
      0 16px 40px -8px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;
  }



  /* Arc: outer cards lower + rotated, inner cards higher */
  .case-card[data-card="0"] { transform: rotate(-2.5deg) translateY(14px); z-index: 1; }
  .case-card[data-card="1"] { transform: rotate(-0.5deg) translateY(-8px); z-index: 2; }
  .case-card[data-card="2"] { transform: rotate(0.5deg) translateY(-8px); z-index: 2; }
  .case-card[data-card="3"] { transform: rotate(2.5deg) translateY(14px); z-index: 1; }

  .case-card:hover {
    transform: rotate(0deg) translateY(-16px) scale(1.04);
    box-shadow:
      0 24px 60px -10px rgba(0, 0, 0, 0.8),
      0 0 0 1px var(--bdr),
      0 0 40px -12px var(--bdr),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    z-index: 10;
  }

  /* Image */
  .case-image {
    position: relative;
    width: 100%;
    aspect-ratio: 5 / 4;
    overflow: hidden;
  }

  .case-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .case-card:hover .case-image img {
    transform: scale(1.05);
  }

  /* Stronger gradient for text readability */
  .case-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.08) 0%,
      rgba(0, 0, 0, 0.25) 35%,
      rgba(21, 19, 14, 0.85) 72%,
      rgba(21, 19, 14, 1) 100%
    );
    pointer-events: none;
  }

  /* File label & stamp */
  .case-header {
    position: absolute;
    top: 0.6rem;
    left: 0.6rem;
    right: 0.6rem;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    z-index: 2;
  }

  .case-file {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.65);
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
  }

  .case-label {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.5rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: #cc4444;
    padding: 0.15rem: 0.45rem;
    border: 1.5px solid #cc4444;
    border-radius: 2px;
    transform: rotate(-4deg);
    opacity: 0.85;
    background: rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(4px);
  }

  /* Title on image */
  .case-name {
    position: absolute;
    bottom: 0.35rem;
    left: 0.75rem;
    right: 0.75rem;
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--foreground);
    line-height: 1.1;
    letter-spacing: -0.02em;
    z-index: 2;
    margin: 0;
    text-shadow: 0 4px 12px rgba(0,0,0,0.8), 0 2px 4px rgba(0,0,0,0.5);
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .case-card:hover .case-name { 
    color: var(--bdr); 
    transform: translateY(-2px);
  }

  /* Body — improved readability */
  .case-body {
    padding: 0.5rem 0.75rem 0.85rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .case-subtitle {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--muted-foreground);
    opacity: 0.6;
    margin-bottom: 0.35rem;
  }

  .case-desc {
    font-size: 0.82rem;
    color: var(--foreground-muted);
    line-height: 1.5;
    flex-grow: 1;
    margin-bottom: 0.6rem;
  }

  .case-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted-foreground);
    transition: all var(--transition-fast);
  }

  .case-card:hover .case-cta {
    color: var(--bdr);
    gap: 0.65rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .board-cards {
      flex-wrap: wrap;
      gap: 1.25rem;
      justify-content: center;
    }
    .case-card {
      width: 45%;
      margin: 0;
    }
    .case-card[data-card="0"],
    .case-card[data-card="1"],
    .case-card[data-card="2"],
    .case-card[data-card="3"] {
      transform: none;
    }
    .connecting-lines { display: none; }
  }

  @media (max-width: 640px) {
    .board {
      padding: 0 0.75rem 1rem;
      margin-top: 0;
      flex: none;
    }
    .board-cards {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.625rem;
    }
    .case-card {
      width: 100%;
      margin: 0;
      border-radius: 10px;
    }
    .case-image {
      aspect-ratio: 4 / 3;
    }
    .case-image-overlay {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.05) 0%,
        rgba(0, 0, 0, 0.15) 30%,
        rgba(21, 19, 14, 0.8) 65%,
        rgba(21, 19, 14, 1) 100%
      );
    }
    .case-header {
      top: 0.4rem;
      left: 0.4rem;
      right: 0.4rem;
    }
    .case-file {
      font-size: 0.5rem;
      padding: 0.1rem 0.3rem;
    }
    .case-label {
      font-size: 0.4rem;
      padding: 0.1rem 0.3rem;
    }
    .case-name {
      font-size: 1.1rem;
      bottom: 0.2rem;
      left: 0.5rem;
      right: 0.5rem;
    }
    .case-body {
      padding: 0.35rem 0.5rem 0.5rem;
    }
    .case-subtitle {
      font-size: 0.45rem;
      margin-bottom: 0.2rem;
    }
    .case-desc {
      display: none;
    }
    .case-cta {
      font-size: 0.6rem;
    }
    .case-card:hover { transform: translateY(-2px); }
  }
</style>
